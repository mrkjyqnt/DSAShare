<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!--  Apply the BodyText Font Size to All Controls  -->
    <Style TargetType="Control">
        <Setter Property="FontSize" Value="{StaticResource BodySize}" />
        <Setter Property="FontFamily" Value="{StaticResource FontFamily}" />
    </Style>

    <!--  Default Font Style for TextBlock  -->
    <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource BodySize}" />
        <Setter Property="FontFamily" Value="{StaticResource FontFamily}" />
    </Style>

    <!--  Named Font Styles  -->
    <!--  Headings Text  -->
    <Style x:Key="HeadingText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource Headings}" />
        <Setter Property="FontFamily" Value="{StaticResource InterMedium}" />
    </Style>

    <!--  Logo Text  -->
    <Style x:Key="LogoText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource TitleSize}" />
        <Setter Property="FontFamily" Value="{StaticResource InterBold}" />
    </Style>

    <!--  Title  -->
    <Style x:Key="TitleText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource SubHeadings}" />
        <Setter Property="FontFamily" Value="{StaticResource InterSemiBold}" />
    </Style>

    <!--  SubTitle  -->
    <Style x:Key="SubTitleText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource TitleSize}" />
        <Setter Property="FontFamily" Value="{StaticResource InterMedium}" />
    </Style>


    <!--  Body  -->
    <Style x:Key="TitleBodyText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource SubTitleSize}" />
        <Setter Property="FontFamily" Value="{StaticResource InterMedium}" />
    </Style>

    <!--  Body  -->
    <Style x:Key="BodyText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource BodySize}" />
        <Setter Property="FontFamily" Value="{StaticResource InterRegular}" />
    </Style>

    <!--  Label  -->
    <Style x:Key="LabelText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="{StaticResource LabelSize}" />
        <Setter Property="FontFamily" Value="{StaticResource InterRegular}" />
    </Style>

</ResourceDictionary>