
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!--  Default Colors  -->
    <Color x:Key="PrimaryColor">#DCDCDC</Color>
    <Color x:Key="SecondaryColor">#DCDCDC</Color>
    <Color x:Key="BackgroundColor">#FFFFFF</Color>
    <Color x:Key="SecondaryBackgroundColor">#F0F0F0</Color>
    <Color x:Key="BlackColor">#1A1A1A</Color>
    <Color x:Key="WhiteColor">#FFFFFF</Color>

    <!--  Default Colors Definitions  -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="{StaticResource SecondaryBackgroundColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource BlackColor}" />
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource BlackColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BlackColor}" />
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource WhiteColor}" />

    <!--  Default Font Family  -->
    <FontFamily x:Key="FontFamily">./FontFamily/#Inter Regular</FontFamily>

    <FontFamily x:Key="InterExtraLight">./FontFamily/#Inter Extra Light</FontFamily>
    <FontFamily x:Key="InterLight">./FontFamily/#Inter Light</FontFamily>
    <FontFamily x:Key="InterRegular">./FontFamily/#Inter Regular</FontFamily>
    <FontFamily x:Key="InterMedium">./FontFamily/#Inter Medium</FontFamily>
    <FontFamily x:Key="InterSemiBold">./FontFamily/#Inter Semi Bold</FontFamily>
    <FontFamily x:Key="InterBold">./FontFamily/#Inter Bold</FontFamily>
    <FontFamily x:Key="InterExtraBold">./FontFamily/#Inter Extra Bold</FontFamily>

    <!--  Default Font Sizes  -->
    <sys:Double x:Key="DisplaySize">32</sys:Double>
    <sys:Double x:Key="TitleSize">20</sys:Double>
    <sys:Double x:Key="SubTitleSize">16</sys:Double>
    <sys:Double x:Key="BodySize">14</sys:Double>
    <sys:Double x:Key="LabelSize">12</sys:Double>

    <!--  Default Padding Sizes  -->
    <Thickness x:Key="Space-32">32</Thickness>
    <Thickness x:Key="Space-16">16</Thickness>
    <Thickness x:Key="Space-12">12</Thickness>
    <Thickness x:Key="Space-8">8</Thickness>

    <!--  Default Corner Redius Sizes  -->
    <CornerRadius x:Key="FullRadius">1000</CornerRadius>
    <CornerRadius x:Key="SmallRadius">4</CornerRadius>
</ResourceDictionary>