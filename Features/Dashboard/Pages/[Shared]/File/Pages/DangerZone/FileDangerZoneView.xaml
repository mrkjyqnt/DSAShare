<UserControl
    x:Class="FileDangerZoneView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DSAShare"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="{DynamicResource SecondaryBackgroundBrush}"
    UseLayoutRounding="True"
    mc:Ignorable="d">
    <ScrollViewer
        Padding="{DynamicResource Space-32}"
        HorizontalScrollBarVisibility="Disabled"
        VerticalScrollBarVisibility="Hidden">
        <Grid local:GridHelper.ColumnSpacing="32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" local:GridHelper.RowSpacing="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Style="{DynamicResource SubTitleText}"
                    Text="Danger Zone" />
                <TextBlock
                    Grid.Row="2"
                    Text="Please read carefully before doing an action"
                    TextWrapping="Wrap" />
            </Grid>
            <Grid Grid.Column="2" local:GridHelper.RowSpacing="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" local:StackPanelHelper.Spacing="16">
                    <TextBlock Style="{DynamicResource TitleBodyText}" Text="{Binding AvailabilityText}" />
                    <Grid>
                        <Button
                            Grid.Row="1"
                            HorizontalAlignment="Stretch"
                            Command="{Binding DisableFileCommand}"
                            Content="Disable"
                            Style="{DynamicResource DangerButton}"
                            ToolTip="Temporarily disable the file"
                            Visibility="{Binding DisableButtonVisibility}" />
                        <Button
                            Grid.Row="1"
                            HorizontalAlignment="Stretch"
                            Command="{Binding EnableFileCommand}"
                            Content="Enable"
                            Style="{DynamicResource DefaultButton}"
                            ToolTip="Enable the file"
                            Visibility="{Binding EnableButtonVisibility}" />
                    </Grid>
                </StackPanel>
                <StackPanel
                    Grid.Row="1"
                    local:StackPanelHelper.Spacing="16"
                    Visibility="{Binding BlockFileSectionVisibility}">
                    <TextBlock
                        Style="{DynamicResource TitleBodyText}"
                        Text="Permanently Block File"
                        TextWrapping="Wrap" />
                    <Button
                        HorizontalAlignment="Stretch"
                        Command="{Binding BlockFileCommand}"
                        Content="Block File"
                        Style="{DynamicResource DangerButton}"
                        ToolTip="WARNING: This will block the file permanently" />
                </StackPanel>
                <StackPanel Grid.Row="2" local:StackPanelHelper.Spacing="16">
                    <TextBlock
                        Style="{DynamicResource TitleBodyText}"
                        Text="Permanently Delete File"
                        TextWrapping="Wrap" />
                    <Button
                        HorizontalAlignment="Stretch"
                        Command="{Binding DeleteFileCommand}"
                        Content="Delete File"
                        Style="{DynamicResource DangerButton}"
                        ToolTip="WARNING: This will delete the file permanently" />
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
