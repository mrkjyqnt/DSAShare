<UserControl
    x:Class="FileSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DSAShare"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="{StaticResource SecondaryBackgroundBrush}"
    mc:Ignorable="d">
    <Border Padding="{StaticResource Space-32}" HorizontalAlignment="Stretch">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="32" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                <Border
                    Grid.Column="0"
                    Width="200"
                    Padding="0"
                    VerticalAlignment="Top"
                    ClipToBounds="True"
                    Style="{StaticResource DefaultBorder}">
                    <StackPanel HorizontalAlignment="Stretch">
                        <Border
                            Grid.Row="0"
                            Padding="{StaticResource Space-16}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="16" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="12" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="12" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        FontFamily="{StaticResource InterMedium}"
                                        Text="Access" />
                                    <RadioButton
                                        Grid.Row="2"
                                        Content="Public"
                                        IsChecked="{Binding IsPublicSelected, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource DefaultRadioButton}" />
                                    <RadioButton
                                        Grid.Row="4"
                                        Content="Private"
                                        IsChecked="{Binding IsPrivateSelected, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource DefaultRadioButton}" />
                                </Grid>
                                <Grid
                                    x:Name="EncryptionSection"
                                    Grid.Row="2"
                                    IsEnabled="{Binding EncryptionSection}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="12" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="12" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="12" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        FontFamily="{StaticResource InterMedium}"
                                        Text="Encryption" />
                                    <RadioButton
                                        Grid.Row="2"
                                        Content="Code"
                                        IsChecked="{Binding IsCodeSelected, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource DefaultRadioButton}" />
                                    <RadioButton
                                        Grid.Row="4"
                                        Content="Secret Word"
                                        IsChecked="{Binding IsWordSelected, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource DefaultRadioButton}" />
                                    <TextBox
                                        Grid.Row="6"
                                        VerticalAlignment="Center"
                                        Style="{StaticResource DefaultTextbox}"
                                        Tag="Type Here"
                                        Text="{Binding EncryptionInput, UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>
                            </Grid>
                        </Border>
                        <Border Grid.Row="2" Padding="{StaticResource Space-16}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="16" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="16" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    FontFamily="{StaticResource InterMedium}"
                                    Text="Expiration" />
                                <CheckBox
                                    Grid.Row="2"
                                    Content="Enable"
                                    IsChecked="{Binding IsExpirationEnabled}"
                                    Style="{StaticResource DefaultCheckBox}" />
                                <Grid Grid.Row="4" IsEnabled="{Binding ExpirationPicker, UpdateSourceTrigger=PropertyChanged}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="16" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="Available Before" />
                                    <DatePicker
                                        Grid.Row="2"
                                        SelectedDate="{Binding SelectedDate}"
                                        Style="{StaticResource DefaultDatePicker}" />
                                </Grid>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
            </ScrollViewer>
            <Grid Grid.Column="2" HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="16" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="16" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid local:GridHelper.ColumnSpacing="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        Grid.Column="0"
                        Style="{StaticResource DefaultTextbox}"
                        Tag="Name"
                        Text="{Binding NameInput, UpdateSourceTrigger=PropertyChanged}" />
                    <Button
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Command="{Binding SaveChangesCommand}"
                        Content="Save Changes"
                        Style="{StaticResource DefaultButton}"
                        ToolTip="Save Changes" />
                </Grid>
                <TextBox
                    Grid.Row="2"
                    MinHeight="200"
                    Style="{StaticResource DefaultTextbox}"
                    Tag="Description"
                    Text="{Binding DescriptionInput, UpdateSourceTrigger=PropertyChanged}"
                    TextWrapping="Wrap" />
                <Grid Grid.Row="4" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="16" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="/Components/Images/file.png" />
                    <TextBlock
                        Grid.Column="2"
                        MaxWidth="200"
                        VerticalAlignment="Center"
                        Style="{StaticResource BodyText}"
                        Text="{Binding FileName}"
                        TextTrimming="CharacterEllipsis"
                        ToolTip="{Binding FileName}" />
                    <TextBlock
                        Grid.Column="4"
                        Width="Auto"
                        VerticalAlignment="Center"
                        Style="{StaticResource BodyText}"
                        Text="{Binding FileSize}" />
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
