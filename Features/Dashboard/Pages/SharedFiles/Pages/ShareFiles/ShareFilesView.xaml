<UserControl
    x:Class="ShareFilesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DSAShare"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prims="http://prismlibrary.com/"
    prims:ViewModelLocator.AutoWireViewModel="True"
    Background="{StaticResource SecondaryBackgroundBrush}"
    UseLayoutRounding="True"
    mc:Ignorable="d">
    <StackPanel>
        <Border
            Padding="{StaticResource Space-32}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="32" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Command="{Binding AccessFilesCommand}"
                    Style="{StaticResource IconButton}">
                    <Button.Content>
                        <Image Source="/Components/Images/back.png" />
                    </Button.Content>
                </Button>
                <TextBlock
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Style="{StaticResource TitleText}"
                    Text="Share File" />
                <Button
                    Grid.Column="4"
                    Command="{Binding AccessFilesCommand}"
                    Content="Publish"
                    Style="{StaticResource DefaultButton}" />
            </Grid>
        </Border>
        <Border Padding="{StaticResource Space-32}" HorizontalAlignment="Stretch">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="32" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ScrollViewer VerticalScrollBarVisibility="Hidden">
                    <Border
                        Grid.Column="0"
                        Width="200"
                        Padding="0"
                        VerticalAlignment="Top"
                        ClipToBounds="True"
                        Style="{StaticResource DefaultBorder}">
                        <StackPanel HorizontalAlignment="Stretch">
                            <Border
                                Grid.Row="0"
                                Padding="{StaticResource Space-16}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,0,0,1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="16" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="12" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="12" />
                                            <RowDefinition Height="auto" />
                                        </Grid.RowDefinitions>
                                        <TextBlock
                                            Grid.Row="0"
                                            FontFamily="{StaticResource InterMedium}"
                                            Text="Access" />
                                        <RadioButton
                                            Grid.Row="2"
                                            Content="Public"
                                            Style="{StaticResource DefaultRadioButton}" />
                                        <RadioButton
                                            Grid.Row="4"
                                            Content="Private"
                                            Style="{StaticResource DefaultRadioButton}" />
                                    </Grid>
                                    <Grid Grid.Row="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="12" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="12" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="12" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <TextBlock
                                            Grid.Row="0"
                                            FontFamily="{StaticResource InterMedium}"
                                            Text="Encryption" />
                                        <RadioButton
                                            Grid.Row="2"
                                            Content="Code"
                                            Style="{StaticResource DefaultRadioButton}" />
                                        <RadioButton
                                            Grid.Row="4"
                                            Content="SecretWord"
                                            Style="{StaticResource DefaultRadioButton}" />
                                        <TextBox
                                            Grid.Row="6"
                                            VerticalAlignment="Center"
                                            Style="{StaticResource DefaultTextbox}"
                                            Tag="Type Here" />
                                    </Grid>
                                </Grid>
                            </Border>
                            <Border Grid.Row="2" Padding="{StaticResource Space-16}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="16" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="16" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        FontFamily="{StaticResource InterMedium}"
                                        Text="Expiration" />
                                    <CheckBox
                                        Grid.Row="2"
                                        Content="Public"
                                        Style="{StaticResource DefaultCheckBox}" />
                                    <Grid Grid.Row="4">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="16" />
                                            <RowDefinition Height="auto" />
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="Available Before" />
                                        <DatePicker Style="{StaticResource DefaultDatePicker}" />
                                    </Grid>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </ScrollViewer>
                <Grid Grid.Column="2" HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="16" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="16" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBox
                        Grid.Row="0"
                        Style="{StaticResource DefaultTextbox}"
                        Tag="Name" />
                    <TextBox
                        Grid.Row="2"
                        MinHeight="200"
                        Style="{StaticResource DefaultTextbox}"
                        Tag="Description"
                        TextWrapping="Wrap" />
                    <Grid Grid.Row="4">
                        <Button
                            HorizontalAlignment="Stretch"
                            Command="{Binding AccessFilesCommand}"
                            Content="Add File"
                            Style="{StaticResource DefaultButton}" />
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </StackPanel>
</UserControl>
