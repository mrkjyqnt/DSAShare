<UserControl
    x:Class="HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DSAShare"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <StackPanel>
        <Border
            Padding="{StaticResource Space-32}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="0,0,0,1">
            <TextBlock Style="{StaticResource TitleText}">Welcome to DSA Share</TextBlock>
        </Border>
        <Border Padding="{StaticResource Space-32}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="32" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="32" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="32" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Style="{StaticResource DefaultBorder}">
                    <Grid HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="10" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Style="{StaticResource BodyText}">Share your files across your network</TextBlock>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <Button
                                Grid.Column="0"
                                Command="{Binding ShareFilesCommand}"
                                Content="Share Files"
                                Style="{StaticResource DefaultButton}" />
                            <Button
                                Grid.Column="2"
                                Command="{Binding AccessFilesCommand}"
                                Content="Access Files"
                                Style="{StaticResource DefaultButton}" />
                        </Grid>
                    </Grid>
                </Border>
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="10" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Style="{StaticResource SubTitleText}"
                        Text="Total Files" />
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="16" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Style="{StaticResource DefaultBorder}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="10" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Style="{StaticResource BodyText}"
                                    Text="Public" />
                                <TextBlock
                                    Grid.Row="2"
                                    Style="{StaticResource TitleText}"
                                    Text="{Binding PublicText}" />
                            </Grid>
                        </Border>
                        <Border Grid.Column="2" Style="{StaticResource DefaultBorder}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="10" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Style="{StaticResource BodyText}"
                                    Text="Shared" />
                                <TextBlock
                                    Grid.Row="2"
                                    Style="{StaticResource TitleText}"
                                    Text="{Binding SharedText}" />
                            </Grid>
                        </Border>
                        <Border Grid.Column="4" Style="{StaticResource DefaultBorder}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="10" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    Style="{StaticResource BodyText}"
                                    Text="Accessed" />
                                <TextBlock
                                    Grid.Row="2"
                                    Style="{StaticResource TitleText}"
                                    Text="{Binding AccessedText}" />
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </StackPanel>
</UserControl>
