<UserControl
    x:Class="HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:DSAShare"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Border
            Grid.Row="0"
            Padding="{StaticResource Space-32}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="0,0,0,1">
            <TextBlock Style="{StaticResource TitleText}">Welcome to DSA Share</TextBlock>
        </Border>

        <!--  Content  -->
        <ScrollViewer
            Grid.Row="1"
            Padding="0"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Hidden">
            <Border
                Padding="{StaticResource Space-32}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">

                <Grid VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="32" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="32" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Style="{StaticResource DefaultBorder}">
                        <Grid HorizontalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="10" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Style="{StaticResource BodyText}">Share your files across your network</TextBlock>
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <Button
                                    Grid.Column="0"
                                    Command="{Binding ShareFilesCommand}"
                                    Content="Share Files"
                                    Style="{StaticResource DefaultButton}" />
                                <Button
                                    Grid.Column="2"
                                    Command="{Binding AccessFilesCommand}"
                                    Content="Access Files"
                                    Style="{StaticResource DefaultButton}" />
                            </Grid>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="10" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Style="{StaticResource SubTitleText}"
                            Text="Total Files" />
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="16" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="16" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Style="{StaticResource DefaultBorder}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="10" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Style="{StaticResource BodyText}"
                                        Text="Public" />
                                    <TextBlock
                                        Grid.Row="2"
                                        Style="{StaticResource TitleText}"
                                        Text="{Binding PublicText}" />
                                </Grid>
                            </Border>
                            <Border Grid.Column="2" Style="{StaticResource DefaultBorder}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="10" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Style="{StaticResource BodyText}"
                                        Text="Shared" />
                                    <TextBlock
                                        Grid.Row="2"
                                        Style="{StaticResource TitleText}"
                                        Text="{Binding SharedText}" />
                                </Grid>
                            </Border>
                            <Border Grid.Column="4" Style="{StaticResource DefaultBorder}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="10" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Style="{StaticResource BodyText}"
                                        Text="Accessed" />
                                    <TextBlock
                                        Grid.Row="2"
                                        Style="{StaticResource TitleText}"
                                        Text="{Binding AccessedText}" />
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="16" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Style="{StaticResource SubTitleText}"
                            Text="Recent Activities" />
                        <DataGrid
                            Grid.Row="2"
                            MaxHeight="332"
                            AutoGenerateColumns="False"
                            ItemsSource="{Binding DataGridActivities}"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            SelectedItem="{Binding SelectedActivity, Mode=TwoWay}"
                            Style="{StaticResource DefaultDataGrid}">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Width="*" IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Vertical">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Action}" />
                                                    <TextBlock Text=" " />
                                                    <TextBlock
                                                        FontFamily="{StaticResource InterMedium}"
                                                        Text="{Binding FileName}"
                                                        TextTrimming="CharacterEllipsis" />
                                                </StackPanel>
                                                <TextBlock Foreground="{StaticResource SecondaryBrush}" Text="{Binding ActionAt}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>