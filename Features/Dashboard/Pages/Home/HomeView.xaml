<UserControl
    x:Class="HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:DSAShare"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Padding="{StaticResource Space-32}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="0,0,0,1">
            <TextBlock Style="{StaticResource TitleText}">Welcome to DSA Share</TextBlock>
        </Border>

        <ScrollViewer Grid.Row="1">
            <Border
                Padding="{StaticResource Space-32}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">

                <Grid VerticalAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="32" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="32" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Style="{StaticResource DefaultBorder}">
                        <Grid HorizontalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition Height="10" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Style="{StaticResource BodyText}">Share your files across your network</TextBlock>
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <Button
                                    Grid.Column="0"
                                    Command="{Binding ShareFilesCommand}"
                                    Content="Share File"
                                    Style="{StaticResource DefaultButton}"
                                    ToolTip="Share a file" />
                                <Button
                                    Grid.Column="2"
                                    Command="{Binding AccessFilesCommand}"
                                    Content="Access File"
                                    Style="{StaticResource DefaultButton}"
                                    ToolTip="Access a file" />
                            </Grid>
                        </Grid>
                    </Border>

                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="10" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Style="{StaticResource SubTitleText}"
                            Text="Total Files" />
                        <Grid Grid.Row="2" local:GridHelper.ColumnSpacing="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Border
                                Grid.Column="0"
                                Style="{StaticResource DefaultBorder}"
                                ToolTip="Total files you shared">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="10" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Style="{StaticResource BodyText}"
                                        Text="Shared" />
                                    <TextBlock
                                        Grid.Row="2"
                                        Style="{StaticResource TitleText}"
                                        Text="{Binding SharedText}" />
                                </Grid>
                            </Border>
                            <Border
                                Grid.Column="2"
                                Style="{StaticResource DefaultBorder}"
                                ToolTip="Total files you accessed">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="10" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Style="{StaticResource BodyText}"
                                        Text="Accessed" />
                                    <TextBlock
                                        Grid.Row="2"
                                        Style="{StaticResource TitleText}"
                                        Text="{Binding AccessedText}" />
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>

                    <Grid
                        Grid.Row="4"
                        local:GridHelper.RowSpacing="16"
                        ScrollViewer.CanContentScroll="False">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Style="{StaticResource SubTitleText}"
                            Text="Recent Activities" />
                        <Border Grid.Row="1">
                            <DataGrid
                                local:ScrollHelper.BubbleScroll="True"
                                AutoGenerateColumns="False"
                                ItemsSource="{Binding DataGridActivities}"
                                SelectedItem="{Binding SelectedActivity, Mode=TwoWay}"
                                Style="{StaticResource DefaultDataGrid}">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn Width="*" IsReadOnly="True">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Vertical">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Action}" />
                                                        <TextBlock Text=" " />
                                                        <TextBlock
                                                            MaxWidth="250"
                                                            FontFamily="{StaticResource InterMedium}"
                                                            Text="{Binding Name}"
                                                            TextTrimming="CharacterEllipsis"
                                                            ToolTip="{Binding Name}" />
                                                    </StackPanel>
                                                    <TextBlock Foreground="{StaticResource SecondaryBrush}" Text="{Binding ActionAt}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>