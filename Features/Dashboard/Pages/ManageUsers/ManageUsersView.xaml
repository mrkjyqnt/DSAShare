<UserControl
    x:Class="ManageUsersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DSAShare"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="{StaticResource SecondaryBackgroundBrush}"
    UseLayoutRounding="True">
    <UserControl.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Padding="{StaticResource Space-32}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" MinWidth="32" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Style="{StaticResource TitleText}"
                    Text="Manage Users" />
                <StackPanel
                    Grid.Column="2"
                    local:StackPanelHelper.Spacing="16"
                    Orientation="Horizontal">
                    <Border
                        Width="260"
                        Height="50"
                        Padding="0"
                        Style="{StaticResource DefaultBorder}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image
                                Width="20"
                                Height="20"
                                Margin="14,14,0,14"
                                Source="/Components/Images/search.png" />
                            <TextBox
                                Grid.Column="1"
                                VerticalAlignment="Stretch"
                                Background="Transparent"
                                BorderThickness="0"
                                Style="{StaticResource DefaultTextbox}"
                                Tag="Search"
                                Text="{Binding SearchInput, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
        <Border Grid.Row="1" Padding="32,32,32,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="32" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Hidden">
                    <Border
                        Grid.Column="0"
                        Width="200"
                        Padding="0"
                        VerticalAlignment="Top"
                        ClipToBounds="True"
                        Style="{StaticResource DefaultBorder}">
                        <StackPanel HorizontalAlignment="Stretch">
                            <Border
                                Padding="{StaticResource Space-16}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,0,0,1">
                                <Grid local:GridHelper.RowSpacing="12">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        FontFamily="{StaticResource InterMedium}"
                                        Text="Role" />
                                    <RadioButton
                                        Grid.Row="1"
                                        Content="Member"
                                        GroupName="Roles"
                                        IsChecked="{Binding IsMemberSelected}"
                                        Style="{StaticResource DefaultRadioButton}" />
                                </Grid>
                            </Border>
                            <Border
                                Padding="{StaticResource Space-16}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,0,0,1">
                                <Grid local:GridHelper.RowSpacing="12">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        FontFamily="{StaticResource InterMedium}"
                                        Text="Status" />
                                    <RadioButton
                                        Grid.Row="1"
                                        Content="Both"
                                        GroupName="Status"
                                        IsChecked="{Binding IsBothSelected}"
                                        Style="{StaticResource DefaultRadioButton}" />
                                    <RadioButton
                                        Grid.Row="2"
                                        Content="Active"
                                        GroupName="Status"
                                        IsChecked="{Binding IsActiveSelected}"
                                        Style="{StaticResource DefaultRadioButton}" />
                                    <RadioButton
                                        Grid.Row="3"
                                        Content="Banned"
                                        GroupName="Status"
                                        IsChecked="{Binding IsBannedSelected}"
                                        Style="{StaticResource DefaultRadioButton}" />
                                </Grid>
                            </Border>
                            <Border Padding="{StaticResource Space-16}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="12" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="12" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="12" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="12" />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        FontFamily="{StaticResource InterMedium}"
                                        Text="Registration Date" />
                                    <TextBlock
                                        Grid.Row="2"
                                        Style="{StaticResource LabelText}"
                                        Text="From" />
                                    <DatePicker
                                        Grid.Row="4"
                                        DisplayDateEnd="{Binding FromMaxDate}"
                                        DisplayDateStart="{Binding FromMinDate}"
                                        SelectedDate="{Binding FromSelectedDate}"
                                        Style="{StaticResource DefaultDatePicker}" />
                                    <TextBlock
                                        Grid.Row="6"
                                        Style="{StaticResource LabelText}"
                                        Text="To" />
                                    <DatePicker
                                        Grid.Row="8"
                                        DisplayDateEnd="{Binding ToMaxDate}"
                                        DisplayDateStart="{Binding ToMinDate}"
                                        SelectedDate="{Binding ToSelectedDate}"
                                        Style="{StaticResource DefaultDatePicker}" />
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </ScrollViewer>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel
                        Grid.Row="0"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock Style="{StaticResource SubTitleText}" Text="{Binding ResultCount}" />
                        <TextBlock Style="{StaticResource SubTitleText}" Text=" Users found" />
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <DataGrid
                            VerticalAlignment="Stretch"
                            local:ScrollHelper.BubbleScroll="True"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            ItemsSource="{Binding DataGridUsers}"
                            Style="{StaticResource DefaultDataGrid}">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Name}"
                                    FontFamily="{StaticResource InterMedium}"
                                    Header="Name">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="ToolTip" Value="{Binding Name}" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Username}"
                                    Header="Username">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="ToolTip" Value="{Binding Username}" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Role}"
                                    CanUserSort="True"
                                    Header="Role">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="ToolTip" Value="{Binding Role}" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Status}"
                                    Header="Status">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="ToolTip" Value="{Binding Status}" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTemplateColumn Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                MinWidth="58"
                                                HorizontalAlignment="Stretch"
                                                Command="{Binding DataContext.ViewCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding Id}"
                                                Content="View"
                                                Style="{StaticResource SmallButton}" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Border
                            Margin="0,49,0,0"
                            VerticalAlignment="Top"
                            Background="{StaticResource BackgroundBrush}"
                            Visibility="{Binding DataGridUsers, Converter={StaticResource NullToVisibilityConverter}}">
                            <Border
                                Padding="{StaticResource Space-16}"
                                VerticalAlignment="Top"
                                Style="{StaticResource DefaultBorder}">
                                <TextBlock Style="{StaticResource BodyText}" Text="No records found" />
                            </Border>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
