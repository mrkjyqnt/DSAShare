<UserControl
    x:Class="ReportDetailsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DSAShare"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="{DynamicResource SecondaryBackgroundBrush}"
    UseLayoutRounding="True"
    mc:Ignorable="d">

    <UserControl.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />

        <DataTemplate x:Key="ImagePreviewTemplate">
            <Image Source="{Binding PreviewContent}" Stretch="Uniform" />
        </DataTemplate>

        <DataTemplate x:Key="DocumentPreviewTemplate">
            <WebBrowser
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                local:DocumentPreviewHelper.DocumentSource="{Binding PreviewContent}" />
        </DataTemplate>

        <DataTemplate x:Key="TextPreviewTemplate">
            <Grid>
                <avalonEdit:TextEditor
                    local:TextEditorHelper.BindableText="{Binding PreviewContent, Mode=TwoWay}"
                    Background="{DynamicResource BackgroundBrush}"
                    Foreground="{DynamicResource TextBrush}"
                    IsReadOnly="True"
                    ScrollViewer.CanContentScroll="False"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled"
                    ShowLineNumbers="True"
                    SyntaxHighlighting="{Binding SyntaxHighlighting}" />
                <Grid
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="Transparent" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="UnsupportedPreviewTemplate">
            <Grid
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{DynamicResource BackgroundBrush}">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
                    <Rectangle
                        Width="32"
                        Height="32"
                        Margin="0,0,0,16"
                        Fill="{DynamicResource broken-image}"
                        RenderOptions.EdgeMode="Aliased" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Style="{DynamicResource BodyText}"
                        Text="No preview available" />
                </StackPanel>
            </Grid>
        </DataTemplate>

        <local:PreviewTemplateSelector
            x:Key="PreviewTemplateSelector"
            DocumentTemplate="{StaticResource DocumentPreviewTemplate}"
            ImageTemplate="{StaticResource ImagePreviewTemplate}"
            TextTemplate="{StaticResource TextPreviewTemplate}"
            UnsupportedTemplate="{StaticResource UnsupportedPreviewTemplate}" />
    </UserControl.Resources>

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Border
            Grid.Row="0"
            Padding="{DynamicResource Space-32}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,0,0,1">
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel
                    Grid.Column="0"
                    local:StackPanelHelper.Spacing="16"
                    Orientation="Horizontal">
                    <Button Command="{Binding BackCommand}" Style="{DynamicResource IconButton}">
                        <Button.Content>
                            <Rectangle
                                Width="20"
                                Height="20"
                                Fill="{DynamicResource back}" />
                        </Button.Content>
                    </Button>
                    <TextBlock
                        MaxWidth="440"
                        VerticalAlignment="Center"
                        Style="{DynamicResource TitleText}"
                        Text="{Binding FileNameText}"
                        TextTrimming="CharacterEllipsis" />
                </StackPanel>

            </Grid>
        </Border>

        <!--  Content  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <!--  Left side remains unchanged  -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Hidden">
                <Border
                    Padding="{DynamicResource Space-32}"
                    BorderBrush="{DynamicResource SecondaryBorderBrush}"
                    BorderThickness="0,0,1,0">
                    <StackPanel local:StackPanelHelper.Spacing="32">
                        <TextBlock Style="{DynamicResource SubTitleText}" Text="Details" />
                        <StackPanel
                            Grid.Row="4"
                            local:StackPanelHelper.Spacing="8"
                            Orientation="Vertical">
                            <TextBlock FontFamily="{DynamicResource InterMedium}" Text="Report Description" />
                            <TextBlock
                                Style="{DynamicResource BodyText}"
                                Text="{Binding ReportDescriptionText}"
                                TextWrapping="Wrap" />
                            <Border
                                Grid.Row="1"
                                Padding="0"
                                Style="{DynamicResource DefaultBorder}">
                                <StackPanel>
                                    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Border
                                                Grid.Column="0"
                                                BorderBrush="{DynamicResource BorderBrush}"
                                                BorderThickness="0,0,1,0">
                                                <TextBlock
                                                    Padding="{DynamicResource Space-16}"
                                                    FontFamily="{DynamicResource InterMedium}"
                                                    Text="Reports Count" />
                                            </Border>
                                            <Border Grid.Column="1">
                                                <TextBlock
                                                    Padding="{DynamicResource Space-16}"
                                                    Style="{DynamicResource BodyText}"
                                                    Text="{Binding ReportCountText}" />
                                            </Border>
                                        </Grid>
                                    </Border>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Border
                                            Grid.Column="0"
                                            BorderBrush="{DynamicResource BorderBrush}"
                                            BorderThickness="0,0,1,0">
                                            <TextBlock
                                                Padding="{DynamicResource Space-16}"
                                                FontFamily="{DynamicResource InterMedium}"
                                                Text="Status" />
                                        </Border>
                                        <Border Grid.Column="1">
                                            <TextBlock
                                                Padding="{DynamicResource Space-16}"
                                                Style="{DynamicResource BodyText}"
                                                Text="{Binding ReportStatusText}" />
                                        </Border>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        <Grid HorizontalAlignment="Stretch" local:GridHelper.RowSpacing="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                FontFamily="{DynamicResource InterMedium}"
                                Text="Options" />
                            <Button
                                Grid.Row="1"
                                Margin="0,8,0,0"
                                HorizontalAlignment="Stretch"
                                Command="{Binding ViewCommand}"
                                Content="View File"
                                Style="{DynamicResource DefaultButton}"
                                ToolTip="Download the file"
                                Visibility="{Binding ResolvedButtonVisibility}" />
                            <Grid Grid.Row="1" Visibility="{Binding UnResolvedButtonVisibility}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Button
                                    Grid.Column="0"
                                    HorizontalAlignment="Stretch"
                                    Command="{Binding ViewCommand}"
                                    Content="View File"
                                    Style="{DynamicResource DefaultButton}"
                                    ToolTip="Download the file" />
                                <Button
                                    Grid.Column="1"
                                    Margin="16,0,0,0"
                                    HorizontalAlignment="Stretch"
                                    Command="{Binding ResolvedCommand}"
                                    Content="Mark As Resolved"
                                    Style="{DynamicResource PrimaryButton}"
                                    ToolTip="Remove your access" />
                            </Grid>
                        </Grid>
                        <StackPanel Visibility="{Binding ResolvedSectionVisibility, UpdateSourceTrigger=PropertyChanged}">
                            <Rectangle
                                Margin="0,32,0,32"
                                VerticalAlignment="Center"
                                Stroke="{DynamicResource SecondaryTextBrush}" />
                            <Grid
                                Margin="0,0,0,32"
                                HorizontalAlignment="Stretch"
                                local:GridHelper.RowSpacing="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Grid.Row="0"
                                    FontFamily="{DynamicResource InterMedium}"
                                    Text="Admin Description" />
                                <Border
                                    Grid.Row="1"
                                    Padding="0"
                                    Style="{DynamicResource DefaultBorder}">
                                    <StackPanel>
                                        <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Border
                                                    Grid.Column="0"
                                                    BorderBrush="{DynamicResource BorderBrush}"
                                                    BorderThickness="0,0,1,0">
                                                    <TextBlock
                                                        Padding="{DynamicResource Space-16}"
                                                        FontFamily="{DynamicResource InterMedium}"
                                                        Text="Name" />
                                                </Border>
                                                <Border Grid.Column="1">
                                                    <TextBlock
                                                        Padding="{DynamicResource Space-16}"
                                                        Style="{DynamicResource BodyText}"
                                                        Text="{Binding AdminNameText}"
                                                        TextTrimming="CharacterEllipsis"
                                                        ToolTip="{Binding AdminNameText}" />
                                                </Border>
                                            </Grid>
                                        </Border>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Border
                                                Grid.Column="0"
                                                BorderBrush="{DynamicResource BorderBrush}"
                                                BorderThickness="0,0,1,0">
                                                <TextBlock
                                                    Padding="{DynamicResource Space-16}"
                                                    VerticalAlignment="Top"
                                                    FontFamily="{DynamicResource InterMedium}"
                                                    Text="Description" />
                                            </Border>
                                            <Border Grid.Column="1">
                                                <TextBlock
                                                    Padding="{DynamicResource Space-16}"
                                                    Style="{DynamicResource BodyText}"
                                                    Text="{Binding AdminDescriptionText}"
                                                    TextWrapping="Wrap" />
                                            </Border>
                                        </Grid>

                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>

                    </StackPanel>
                </Border>
            </ScrollViewer>

            <Border
                Grid.Column="1"
                Width="400"
                MaxWidth="400"
                Padding="{DynamicResource Space-32}"
                Background="{DynamicResource BackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="32" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="32" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Style="{DynamicResource SubTitleText}"
                        Text="Preview" />
                    <Border
                        Grid.Row="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="{DynamicResource SecondaryBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1">
                        <Grid>
                            <!--  Preview Content  -->
                            <ContentControl
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Content="{Binding}"
                                ContentTemplateSelector="{StaticResource PreviewTemplateSelector}"
                                Focusable="False">
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ContentControl">
                                                    <ContentPresenter Content="{TemplateBinding Content}" ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}" />
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentPreviewType}" Value="{x:Static local:ReportDetailsViewModel+PreviewTypes.None}">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CurrentPreviewType}" Value="{x:Static local:ReportDetailsViewModel+PreviewTypes.Unsupported}">
                                                <Setter Property="ContentTemplate" Value="{StaticResource UnsupportedPreviewTemplate}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>

                            <!--  Loading Text  -->
                            <Grid
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Background="{DynamicResource BackgroundBrush}"
                                Visibility="{Binding PreviewContent, Converter={StaticResource NullToVisibilityConverter}}">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="{DynamicResource LabelSize}"
                                    Style="{DynamicResource LabelText}"
                                    Text="Loading preview..."
                                    TextAlignment="Center" />
                            </Grid>
                        </Grid>
                    </Border>
                    <StackPanel
                        Grid.Row="4"
                        local:StackPanelHelper.Spacing="8"
                        Orientation="Vertical">
                        <TextBlock FontFamily="{DynamicResource InterMedium}" Text="File Description" />
                        <TextBlock
                            Style="{DynamicResource BodyText}"
                            Text="{Binding DescriptionText}"
                            TextWrapping="Wrap" />
                        <DataGrid
                            local:ScrollHelper.BubbleScroll="True"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            ItemsSource="{Binding DataGridFileDetails}"
                            Style="{DynamicResource DefaultDataGrid}">

                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Key}"
                                    FontFamily="{DynamicResource InterMedium}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="ToolTip" Value="{Binding Key}" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Width="*" Binding="{Binding Value}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                            <Setter Property="ToolTip" Value="{Binding Value}" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>

