<Application
    x:Class="Application"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DSAShare">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  Global  -->
                <ResourceDictionary Source="/Components/DefaultStyle.xaml" />

                <!--  Theme  -->
                <ResourceDictionary Source="/Components/Theme/LightTheme.xaml" />
                <ResourceDictionary Source="/Components/Theme/LightIcons.xaml" />

                <!--  UI  -->
                <ResourceDictionary Source="/Components/UI/ButtonStyle.xaml" />
                <ResourceDictionary Source="/Components/UI/TextblockStyle.xaml" />
                <ResourceDictionary Source="/Components/UI/TextBoxStyle.xaml" />
                <ResourceDictionary Source="/Components/UI/PasswordboxStyle.xaml" />
                <ResourceDictionary Source="/Components/UI/ProgressBarStyle.xaml" />
                <ResourceDictionary Source="/Components/UI/RadioButtonStyle.xaml" />
                <ResourceDictionary Source="/Components/UI/CheckBoxStyle.xaml" />
                <ResourceDictionary Source="/Components/UI/BorderStyle.xaml" />
                <ResourceDictionary Source="/Components/UI/CalendarPickerStyle.xaml" />
                <ResourceDictionary Source="/Components/UI/GridStyle.xaml" />
                <ResourceDictionary Source="/Components/UI/DataGridStyle.xaml" />
                <ResourceDictionary Source="/Components/UI/ToggleButtonStyle.xaml" />
                <ResourceDictionary Source="/Components/UI/NavigationStyle.xaml" />
                <ResourceDictionary Source="/Components/UI/ItemsControlStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
